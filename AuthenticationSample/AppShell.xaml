<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AuthenticationSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AuthenticationSample.Views"
    Title="AuthenticationSample"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

        <ShellContent 
            Title="QRScanner"
            ContentTemplate="{DataTemplate views:ScannerPage}"
            Route="ScannerPage"/>

        <ShellContent 
            Title="Empoyees"
            ContentTemplate="{DataTemplate views:EmployeesPage}"
            Route="EmployeesPage"/>
    </TabBar>

</Shell>
