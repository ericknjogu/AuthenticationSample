<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthenticationSample.Views.ForgotPasswordPage"
             xmlns:viewmodels="clr-namespace:AuthenticationSample.ViewModels"
             Title="">

    <ContentPage.BindingContext>
        <viewmodels:ForgotPasswordViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <Grid RowDefinitions="*">
            <!-- Centering -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="20"
                                 Margin="50">

                <Border StrokeShape="RoundRectangle 20"
                        StrokeThickness="0"
                        BackgroundColor="White"
                        Padding="20"
                        WidthRequest="320"
                        Shadow="5">

                    <VerticalStackLayout Spacing="15">

                        <Label Text="Please Reset Password"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#2c3e50"
                               HorizontalOptions="Center" />

                        <Border
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="1"
                                Stroke="LightGray"
                                BackgroundColor="White"
                                Margin="20,10"
                               
                                Padding="10">


                            <Entry 
                                    Grid.Column="1"
                                   
                                    Text="{Binding Username}"
                                    Placeholder="Username or Employee ID"
                                    IsPassword="False"
                                    TextColor="Black"
                                    FontSize="15"
                                    BackgroundColor="Transparent"
                                    ClearButtonVisibility="WhileEditing"/>

                        </Border>

                        <Border
                            StrokeShape="RoundRectangle 12"
                            StrokeThickness="1"
                            Stroke="LightGray"
                            BackgroundColor="White"
                            Margin="20,10"
                            Padding="10">


                            <Entry Text="{Binding NewPassword}"
                               Placeholder=" New Password"
                               
                               FontSize="15"
                               TextColor="Black"
                               ClearButtonVisibility="Never" />

                        </Border>

                   
                        <Button Text="Reset Password"
                                BackgroundColor="#3498db"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="45"
                                Margin="30"
                                FontAttributes="Bold"
                                Command="{Binding UpdatePasswordCommand}"
                                />


                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>