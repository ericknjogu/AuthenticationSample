<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthenticationSample.Views.LoginPage"
             xmlns:viewmodels="clr-namespace:AuthenticationSample.ViewModels"
             Title="LoginPage"
             Shell.NavBarIsVisible="False">
    
    
    <ContentPage.BindingContext>
        <viewmodels:LoginViewModel />
    </ContentPage.BindingContext>
    
    
    <ScrollView>
        <Grid RowDefinitions="*">
            <!-- Centering -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="20"
                                 Margin="50">

                <Image Source="dotnet_bot.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       HorizontalOptions="Center" />

               
                <Border StrokeShape="RoundRectangle 20"
                        StrokeThickness="0"
                        BackgroundColor="White"
                        Padding="20"
                        WidthRequest="320"
                        Shadow="5">

                    <VerticalStackLayout Spacing="15">

                        <Label Text="Please Login  "
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#2c3e50"
                               HorizontalOptions="Center" />

                        <Entry Text="{Binding Username}"
                               Placeholder=" Username or Employee ID"
                               Keyboard="Email"
                               TextColor="Black"
                               FontSize="15"
                               Margin="25" 
                               ClearButtonVisibility="Never"/>

                        <Entry Text="{Binding Password}"
                               Placeholder="Password"
                               IsPassword="True"
                               FontSize="15"
                               Margin="10"
                               TextColor="Black"
                               ClearButtonVisibility="Never" />

                        <Button Text="Login"
                                BackgroundColor="#3498db"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="45"
                                Margin="30"
                                FontAttributes="Bold"
                                Command="{Binding LoginCommand}" />

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>